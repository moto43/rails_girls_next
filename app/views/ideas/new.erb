<h1><%=@title %> </h1>
<form action="/ideas" method="post" enctype="multipart/form-data">
    <label for="idea_name">Name:</label>
    <br />
    <input type="text" id="idea_name" name="idea[name]" value="<%= @idea.name %>" />
    <br />

    <label for="idea_description">Description:</label>
    <br />
    <textarea name="idea[description]" id="idea_description"  rows="5"><%= @idea.description %></textarea>
    <br />

    <label for="idea_picture">Picture:</label>
    <br />
    <input type="file" id="idea_picture" name="idea[picture]" row="5"><%=@idea.picture %>
    <br />

    <input type="submit" value="Create Idea" />
    </form>